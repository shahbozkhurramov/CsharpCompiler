@page "/"
@using Codes

<PageTitle>Index</PageTitle>
<div class="row">
    <div class="col-md-7">
        <button class="btn btn-success mt-3 mb-3" @onclick="Run">Run</button>
    </div>
    <div class="col-md-5">
        <button class="btn btn-primary mt-3 mb-3" disabled>Result</button>
    </div>
</div>

<br />
<div class="row">
    <div class="col-md-7">
        <div id="container" style="height:500px;border:1px solid grey;"></div>
        <p class="mt-3">Choose a code template: </p> 
        <div class="mt-2">
            <button class="btn btn-primary" @onclick='() => SetCode(DefaultCode.HelloWorldCode)'>Hello world code</button>
            <button class="btn btn-dark mx-4" @onclick='() => SetCode(DefaultCode.OOPCode)'>OOP code</button>
        </div>
    </div>
    <div class="col-md-5">
        <textarea id="console" class="form-control" style="color: white; background-color: black;" rows="10" cols="120">@Output</textarea>
    </div>
</div>