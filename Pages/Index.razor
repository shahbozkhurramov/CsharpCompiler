@page "/"
@using Codes

<PageTitle>Index</PageTitle>
<div class="row">
    <div class="col-md-7">
    </div>
    <div class="col-md-5">
    </div>
</div>

<br />
<div class="row">
    <div class="col-md-7">
        <p>Choose a code template: </p> 
        <button class="btn btn-primary mt-2 mb-2" @onclick='() => SetCode(DefaultCode.HelloWorldCode)'>Hello world code</button>
        <button class="btn btn-dark mx-3 mt-2 mb-2" @onclick='() => SetCode(DefaultCode.OOPCode)'>OOP code</button>
        <div id="container" style="height:500px;border:3px solid grey;border-style: solid;border-radius: 5px;"></div>
    </div>
    <div class="col-md-5">
        <button class="btn btn-success mt-5 mb-2" @onclick="Run">Run</button>
        <button class="btn btn-danger mt-5 mx-3 mb-2" @onclick="ClearCode">Clear code</button>
        <textarea id="console" class="form-control" style="height:500px;color: white; background-color: black;">@Output</textarea>
    </div>
</div>